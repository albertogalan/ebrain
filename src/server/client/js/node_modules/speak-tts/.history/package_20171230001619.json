{
  "name": "speak-tts",
  "version": "1.1.0",
  "description": "Browser TTS (using speechSynthesis API) made easy",
  "main": "lib/speak-tts.js",
  "scripts": {
    "start": "webpack-dev-server --devtool eval --progress --colors --content-base demo/build --hot --inline",
    "deploy": "NODE_ENV=production webpack -p --config webpack.production.config.js",
    "compile": "node_modules/.bin/babel -d lib/ src/",
    "prepublish": "npm run compile"
  },
  "author": "tom-s",
  "keywords": [
    "speech synthesis",
    "speak",
    "speechSynthesis",
    "SpeechSynthesisUtterance",
    "tts",
    "text to speech",
    "browser speech",
    "browser tts",
    "language detection"
  ],
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.3.15",
    "babel-eslint": "^5.0.0-beta4",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-decorators": "^6.5.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-2": "^6.5.0",
    "json-loader": "^0.5.4",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.10.1"
  },
  "dependencies": {
    "franc": "^1.1.2",
    "lodash": "^4.17.4"
  }
}
